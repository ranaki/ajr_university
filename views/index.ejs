<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/css/materialize.min.css">
    <title>Online Courses</title>
  </head>
  <body>
    <header>
      <div class="row">
        <div class="col s3">
        </div>
        <div class="col s9">
        </div>
      </div>
    </header>

      <div class='container'>
        <div class="center-align blue-text text-darken-4"><h1>AJR University<h1></div>
        <div class='row blue lighten-4'>
          <h5 class="col s6"><a href="/courses">List the courses</a></h5> <h5 class="col s6"><a href="/contacts">Contact Us</a></h5>
        </div>
        <div class="section"></div>
        <div class="center-align blue-text text-darken-4"><h5>We teach the full stack</h5></div>
        <div class="divider"></div>
        <div class="row">
          <% courses.forEach( function(course) { %>
            <a style='font-size: 18px;' href=<%= '/courses/' + course.id %> ><div class="card-panel hoverable col s3 light-green lighten-4"><h5><%= course.course_name %></h5></div> </a>
          <% }); %> 
        </div>
    </div>
 </body>
 </html> 