<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/css/materialize.min.css">
    <title>Online Courses</title>
  </head>
  <body>
    <header>
      <div class="row">
        <div class="col s3">
        </div>
        <div class="col s9">
        </div>
      </div>
    </header>

      <div class='container'>
        <h1>AJR University<h1>
        <div class='row blue lighten-4'>
          <h5 class="col s6"><a href="/courses">List the courses</a></h5> <h5 class="col s6"><a href="/contacts">Contact Us</a></h5>
        </div>
        <% courses.forEach( function(course) { %>
            <div class="divider"></div>
            <div class="row">
              <h5 class="col s2"><%= course.course_name %>: </h5><h5 class="col s3"><a style='font-size: 18px;' href=<%= '/courses/' + course.id %> >Learn More</a></h5>
            </div>
        <% }); %>   
    </div>
 </body>
 </html> 